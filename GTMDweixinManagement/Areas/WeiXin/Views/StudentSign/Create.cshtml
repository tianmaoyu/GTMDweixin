    <style>
        #sign{
            width:100%;
            height:100%;
            border-collapse: collapse;
        }
        #sign tr:first-child{
            text-align:center;
            font-size:14px;
            background-color:#eee;
        }
          #sign tr{
            height:44px;
        }
        #sign td{
            text-align:center;
            border:1px solid #D9D9D9;
            width:25%;
        }
        .odd{
             background-color: #ffffff;
        }
       .even{ 
           background-color:#eee;
       }
       .info_meta{
           font-size:11px;
           line-height:12px;
       }
       td:hover
       {
          background-color: #D9D9D9;
        }
    </style>
    <script>
        $(document).ready(function () {
            $("#sign tbody tr:odd").addClass("odd");
            $("#sign tbody tr:even").addClass("even");
            targetCheck();
        })
        function targetCheck() {
            $("#sign tbody tr:not(:eq(8)) td:not(:eq(0))").click(
                function () {
                    if ($(this).index() > 0) {
                        //debugger;
                        if ($(this).html().indexOf("div") > 0) {
                            $(this).html("");
                        } else {
                            $(this).append(
                              "<div class='icon_sp_area'>" +
                               "<i class='weui_icon_success'></i>" +
                               "</div>"
                         );
                        }
                    }
                    getSignTotal();
                    //改变总是
                    //alert(getSignTotal());
            })
        }
        function getSignTotal() {
            var tdList = $("#sign tbody tr td");
            var total = 0;
            $.each(tdList, function () {
                if ($(this).html().indexOf("icon_sp_area") > 0) {
                    total++;
                }
            });
            //改变总数
            $("#sign tbody tr:eq(8) th:eq(3)").html(total);
            //return total;
        }
    </script>
    
